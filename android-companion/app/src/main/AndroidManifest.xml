<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
  <!-- Required to discover and launch any app the user names (Android 11+ package visibility). -->
  <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

  <application
    android:name=".ResolveApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:usesCleartextTraffic="false"
    android:networkSecurityConfig="@xml/network_security_config"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.Resolve.Dark">

    <!-- Welcome / Auth screen (launcher) -->
    <activity
      android:name=".WelcomeActivity"
      android:exported="true"
      android:launchMode="singleTop"
      android:theme="@style/Theme.Resolve.Dark">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- Onboarding / Permissions -->
    <activity
      android:name=".OnboardingActivity"
      android:theme="@style/Theme.Resolve.Dark" />

    <!-- Main screen (issue submission) -->
    <activity
      android:name=".MainActivity"
      android:theme="@style/Theme.Resolve.Dark"
      android:windowSoftInputMode="adjustResize" />

    <!-- Agent live monitor -->
    <activity
      android:name=".MonitorActivity"
      android:theme="@style/Theme.Resolve.Dark" />

    <!-- Case complete -->
    <activity
      android:name=".CompleteActivity"
      android:theme="@style/Theme.Resolve.Dark" />

    <!-- Settings (exported=true for debug ADB config injection) -->
    <activity
      android:name=".SettingsActivity"
      android:exported="true"
      android:theme="@style/Theme.Resolve.Dark" />

    <!-- Background agent service -->
    <service
      android:name=".CompanionAgentService"
      android:enabled="true"
      android:exported="false"
      android:foregroundServiceType="specialUse">
      <property
        android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
        android:value="AI agent automation â€” navigates apps via AccessibilityService on behalf of the user" />
    </service>

    <!-- Accessibility bridge -->
    <service
      android:name=".SupportAccessibilityService"
      android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
      android:exported="false">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService" />
      </intent-filter>
      <meta-data
        android:name="android.accessibilityservice"
        android:resource="@xml/support_accessibility_service" />
    </service>

  </application>

</manifest>
