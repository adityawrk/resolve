<?xml version="1.0" encoding="utf-8"?>
<!-- Activity feed item: an action the agent performed
     e.g., "Typing message...", "Clicked 'Returns'", "Waiting for response..."
     Layout: status dot (8dp) + action text + timestamp right-aligned -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:paddingVertical="@dimen/space_sm"
  android:minHeight="40dp">

  <!-- Status dot: green=done, amber=in progress -->
  <View
    android:id="@+id/actionDot"
    android:layout_width="@dimen/status_dot_size"
    android:layout_height="@dimen/status_dot_size"
    android:background="@drawable/bg_status_dot_success" />

  <!-- Action text -->
  <TextView
    android:id="@+id/actionText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginStart="@dimen/space_md"
    android:textAppearance="?attr/textAppearanceBodySmall"
    android:textColor="?attr/colorOnSurface"
    android:lineSpacingMultiplier="1.3"
    tools:text="Clicked 'My Orders' button" />

  <!-- Timestamp -->
  <TextView
    android:id="@+id/actionTimestamp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_sm"
    android:textAppearance="?attr/textAppearanceLabelSmall"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:alpha="0.8"
    tools:text="12:34" />
</LinearLayout>
