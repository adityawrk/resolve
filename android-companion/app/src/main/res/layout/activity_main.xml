<?xml version="1.0" encoding="utf-8"?>
<!-- ================================================================
     Screen 3: Issue Submission (Main Screen)
     - Top bar: greeting + settings icon
     - Model chip indicator
     - Form inside scrollable area:
       - App selector (horizontal chip group)
       - Issue title (outlined text field, 16dp corners)
       - Description (multiline, 16dp corners)
       - Order / reference ID (optional, 16dp corners)
       - Attachments row (add photo + add file buttons, thumbnails)
       - Desired outcome (chip group)
     - "Resolve It" CTA button (fixed at bottom, 56dp, full width)
     - Previous cases section below form

     Typography:
       Greeting:     headlineSmall (24sp, medium)
       Model chip:   labelSmall (11sp)
       Section label: labelLarge (14sp, medium)
       Inputs:       bodyLarge (16sp) via Material TextInput
       CTA button:   titleSmall (14sp, medium), 16sp via style
       Case card:    titleSmall + bodySmall

     Spacing:
       Page padding: 24dp horizontal
       Top bar height: 64dp
       Greeting to chip: 4dp
       Chip to form: 24dp
       Between form fields: 16dp
       Section label to content: 8dp
       Form to CTA: 24dp
       CTA bottom margin: 24dp (above nav)
     ================================================================ -->

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?attr/colorSurface"
  android:fitsSystemWindows="true">

  <!-- Scrollable content -->
  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="96dp"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingHorizontal="@dimen/page_horizontal">

      <!-- Top bar: greeting + settings -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
          android:id="@+id/greetingText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/greeting_default"
          android:textAppearance="?attr/textAppearanceHeadlineSmall"
          android:textColor="?attr/colorOnSurface"
          android:maxLines="1"
          android:ellipsize="end" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnSettings"
          style="?attr/materialIconButtonStyle"
          android:layout_width="48dp"
          android:layout_height="48dp"
          app:icon="@drawable/ic_settings"
          app:iconSize="24dp"
          android:contentDescription="Settings" />
      </LinearLayout>

      <!-- ===== FORM SECTION ===== -->

      <!-- App name (free-text input) -->
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/appNameLayout"
        style="@style/Resolve.TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_gap"
        android:hint="@string/label_app_name"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/appNameInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:maxLines="1"
          android:textSize="16sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <!-- Issue (merged title + description into one multiline field) -->
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/issueTitleLayout"
        style="@style/Resolve.TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_gap"
        android:hint="@string/label_what_happened">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/issueInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine|textCapSentences"
          android:gravity="top|start"
          android:minLines="3"
          android:maxLines="6"
          android:textSize="16sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <!-- Order description section header -->
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_gap"
        android:text="@string/label_order_section"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnSurfaceVariant" />

      <!-- Order / Reference description (optional) -->
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/orderIdLayout"
        style="@style/Resolve.TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/orderIdInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine|textCapSentences"
          android:hint="@string/order_example_hint"
          android:minLines="1"
          android:maxLines="3"
          android:textSize="16sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <!-- Attachments section -->
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_gap"
        android:text="@string/label_attachments"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnSurfaceVariant" />

      <!-- Attachment action row -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnAddPhoto"
          style="@style/Resolve.Button.Outlined"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:text="@string/btn_add_photo"
          app:icon="@drawable/ic_add_photo"
          app:iconSize="18dp"
          app:iconPadding="8dp" />

        <View
          android:layout_width="@dimen/element_gap"
          android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnAddFile"
          style="@style/Resolve.Button.Outlined"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:text="@string/btn_add_file"
          app:icon="@drawable/ic_attach_file"
          app:iconSize="18dp"
          app:iconPadding="8dp" />
      </LinearLayout>

      <!-- Thumbnail preview row (populated dynamically) -->
      <HorizontalScrollView
        android:id="@+id/thumbnailScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
          android:id="@+id/thumbnailContainer"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/thumbnail_size"
          android:orientation="horizontal"
          android:gravity="center_vertical" />
      </HorizontalScrollView>

      <!-- Media count text (when thumbnails are visible) -->
      <TextView
        android:id="@+id/mediaCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_xs"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"
        tools:text="2 files attached"
        tools:visibility="visible" />

      <!-- Desired outcome -->
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_gap"
        android:text="@string/label_desired_outcome"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnSurface" />

      <com.google.android.material.chip.ChipGroup
        android:id="@+id/outcomeChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:chipSpacingHorizontal="@dimen/element_gap"
        app:chipSpacingVertical="@dimen/space_xs">

        <com.google.android.material.chip.Chip
          android:id="@+id/chipRefund"
          style="@style/Resolve.Chip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/outcome_refund"
          android:checked="true" />

        <com.google.android.material.chip.Chip
          android:id="@+id/chipReplacement"
          style="@style/Resolve.Chip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/outcome_replacement" />

        <com.google.android.material.chip.Chip
          android:id="@+id/chipInfo"
          style="@style/Resolve.Chip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/outcome_info" />

        <com.google.android.material.chip.Chip
          android:id="@+id/chipCancellation"
          style="@style/Resolve.Chip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/outcome_cancellation" />

        <com.google.android.material.chip.Chip
          android:id="@+id/chipOutcomeOther"
          style="@style/Resolve.Chip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/outcome_other" />
      </com.google.android.material.chip.ChipGroup>

      <!-- Other outcome text input (shown when "Other" chip is selected) -->
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otherOutcomeLayout"
        style="@style/Resolve.TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        android:hint="@string/label_other_outcome"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/otherOutcomeInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:maxLines="1"
          android:textSize="16sp" />
      </com.google.android.material.textfield.TextInputLayout>

      <!-- Previous cases section -->
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2xl"
        android:text="@string/section_previous_cases"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:textColor="?attr/colorOnSurface" />

      <!-- Previous case cards container (populated dynamically via RecyclerView) -->
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/previousCasesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        android:nestedScrollingEnabled="false"
        android:visibility="gone" />

      <!-- Empty state -->
      <TextView
        android:id="@+id/emptyCasesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_gap"
        android:paddingVertical="@dimen/space_xl"
        android:text="@string/no_previous_cases"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textAlignment="center"
        android:alpha="0.7" />

      <!-- Bottom spacer for scroll clearance -->
      <View
        android:layout_width="0dp"
        android:layout_height="@dimen/space_lg" />

    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <!-- Fixed bottom CTA: "Resolve It" -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/page_horizontal"
    android:paddingTop="@dimen/space_base"
    android:paddingBottom="@dimen/space_2xl"
    android:background="?attr/colorSurface"
    android:elevation="0dp">

    <!-- Subtle top fade divider -->
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="?attr/colorOutlineVariant"
      android:alpha="0.2"
      android:layout_marginBottom="@dimen/space_base" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnResolveIt"
      style="@style/Resolve.Button.Primary"
      android:layout_width="match_parent"
      android:layout_height="@dimen/button_height_primary"
      android:text="@string/btn_resolve_it" />
  </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
