<?xml version="1.0" encoding="utf-8"?>
<!-- Chat bubble: message sent BY the Resolve agent (right-aligned, purple) -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingVertical="@dimen/space_xs">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:maxWidth="@dimen/bubble_max_width"
    android:background="@drawable/bg_bubble_resolve"
    android:paddingHorizontal="@dimen/bubble_padding_horizontal"
    android:paddingVertical="@dimen/bubble_padding_vertical">

    <!-- Sender label -->
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Resolve"
      android:textAppearance="?attr/textAppearanceLabelSmall"
      android:textColor="@color/bubble_support_text"
      android:alpha="0.7" />

    <!-- Message text -->
    <TextView
      android:id="@+id/bubbleText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:textAppearance="?attr/textAppearanceBodyMedium"
      android:textColor="@color/bubble_support_text"
      android:lineSpacingMultiplier="1.3"
      tools:text="Hi, I ordered product #12345 and it arrived damaged. I have photos of the damage. I would like a full refund please." />
  </LinearLayout>
</FrameLayout>
