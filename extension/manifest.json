{
  "manifest_version": 3,
  "name": "Resolve - AI Support Agent",
  "version": "0.1.0",
  "description": "AI agent that handles customer support chats on your behalf. Describe your issue, and Resolve navigates the support chat for you.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/message-bus.js",
        "lib/widget-detector.js",
        "lib/dom-extractor.js",
        "lib/dom-executor.js",
        "content/main.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
